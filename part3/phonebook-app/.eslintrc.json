{
  "env": {
    "commonjs": true,
    "es2020": true,
    "node": true
  },
  "extends": [ "eslint:recommended" ],
  "ignorePatterns": [ "public_html" ],
  "parserOptions": { "ecmaVersion": "latest" },
  "rules": {
    "indent": [ "error", 2 ],
    "eol-last": [ "error", "always" ],
    "semi": [ "error", "always" ],
    "quotes": [ "error", "double" ],
    "arrow-parens": [ "error", "always" ],
    "comma-dangle": [ "error", "never" ]
  }
}
